{
    "name": "magni-back-end",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "start": "nodemon index.js"
    },
    "author": "Joseph Nunez",
    "license": "ISC",
    "dependencies": {
        "body-parser": "^1.19.0",
        "cuid": "^2.1.8",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "mongoose": "^5.9.16",
        "needle": "^2.5.0",
        "nodemon": "^2.0.4"
    },
    "nodemonConfig": {
        "restartable": "rs",
        "env": {
            "NODE_ENV": "development",
            "PORT": 4000
        }
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^3.0.2",
        "@typescript-eslint/parser": "^3.0.2",
        "eslint": "^7.1.0",
        "eslint-config-airbnb-base": "^14.1.0",
        "eslint-plugin-import": "^2.20.2"
    },
    "eslintConfig": {
        "extends": "airbnb-base",
        "env": {
            "es6": true
        },
        "rules": {
            "brace-style": [
                "error",
                "stroustrup"
            ],
            "no-console": "off",
            "indent": [
                "error",
                4
            ],
            "comma-dangle": [
                "error",
                "never"
            ],
            "no-unused-vars": [
                "warn"
            ],
            "no-var": [
                "off"
            ],
            "one-var": [
                "off"
            ]
        }
    }
}
