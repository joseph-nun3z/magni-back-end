{
  "extends": "airbnb-base",
  "env": {
    "es6": true,
    "jest": true,
    "mongo": true,
    "node": true
  },
  "rules": {
    "linebreak-style": "off",
    "no-return-await": "off",
    "no-param-reassign": "off",
    "brace-style": [
      "error",
      "stroustrup"
    ],
    "no-console": "off",
    "indent": [
      "error",
      4
    ],
    "import/no-extraneous-dependencies": "off",
    "comma-dangle": [
      "error",
      "never"
    ],
    "no-unused-vars": [
      "warn"
    ],
    "no-var": [
      "off"
    ],
    "one-var": [
      "off"
    ]
  }
}
